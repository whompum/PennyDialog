<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:california="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    california:layout_width="wrap_content"
    california:layout_height="match_parent">


    <LinearLayout
        california:orientation="horizontal"
        california:layout_width="match_parent"
        california:layout_height="wrap_content">

        <include layout="@layout/value_container"
                 california:id="@id/valueFrame"/>
        <include layout="@layout/numbers_container"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:layout_anchor="@id/valueFrame"
        app:layout_anchorGravity="center|end"
        app:backgroundTint="?attr/pennyFabBackgroundColor"
        california:scaleX="0"
        california:scaleY="0"
        california:visibility="invisible"
        california:id="@id/doneFab"
        california:layout_marginRight="@dimen/doneFabMargin"
        california:layout_marginEnd="@dimen/doneFabMargin"
        california:layout_width="wrap_content"
        california:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>